<div class="facebook-auth" i18n:domain="zojax.principal.facebook"
     xmlns:fb="http://www.facebook.com/2008/fbml">
  <tal:block define="site modules/zope/app/component/hooks/getSite;
                     siteURL site/@@absolute_url;">
    <script type="text/javascript" tal:content="view/fbInitScript">
    </script>
    <script type="text/javascript">
    FB.Connect.logout();
    </script>
    <a href="#" tal:attributes="onclick view/onclick">
      <img id="fb_login_image" tal:attributes="src string:$siteURL/@@/zojax-principal-facebook-images/facebook.png" alt="Connect" />
    </a>
  </tal:block>
</div>
